input in "Diz aí meu chapa, qual é o seu nome: "
split in "" letters
length letters size
decrement size
rangearray size arr
var isPalindrome 1
foreach index arr
    charat in index letter1
    sub size index index2
    charat in index2 letter2
    notequal letter1 letter2 different
    if different
        var isPalindrome 0
    endif
endforeach
say "Is it a palindrome? $(isPalindrome)"

